#!/bin/bash
#PBS -l nodes=1:ppn=4

#### usage ####
usage() {
	echo Program: "ffq2record (retrieve url corresponding to GEO records)"
	echo Author: BRIC, University of Copenhagen, Denmark
	echo Version: 1.0
	echo Contact: pundhir@binf.ku.dk
	echo "Usage: ffq2record -i <string> [OPTIONS]"
	echo "Options:"
	echo " -i <string> [GSE identifier]"
    echo " -h          [help]"
	echo
	exit 0
}

#### parse options ####
while getopts i:h ARG; do
    case "$ARG" in
    i) ID=$OPTARG;;
    h) HELP=1;;
    esac
done

## usage, if necessary file and directories are given/exist
if [ -z "$ID" -o "$HELP" ]; then
	usage
fi

## retrieve JSON file corresponding to GEO id
TMP=$(cat /dev/urandom | tr -dc 'a-zA-Z0-9' | fold -w 32 | head -n 1)
if [ ! -s "${ID}.json" ]; then
    ffq $ID -t GSE > $ID.json
fi

if [ -s "${ID}.json" ]; then
    ffq2record.R -i $ID.json
else
    rm $ID.json
    if [ ! -s "${ID}_series_matrix.txt.gz" ]; then
        wget https://ftp.ncbi.nlm.nih.gov/geo/series/$(echo $ID | sed 's/...$/nnn/')/${ID}/matrix/${ID}_series_matrix.txt.gz
    fi
        
    paste <(zless ${ID}_series_matrix.txt.gz | grep 'Sample_title\|Sample_relation' | grep -v BioSample | sed -E 's/\"//g' | sed -E 's/SRA://g' | tabEdit -i stdin -t | sed -E 's/https:\/\/www.ncbi.nlm.nih.gov\/sra\?term=//g' | head -n 1 | tr '\t' '\n') <(zless ${ID}_series_matrix.txt.gz | grep 'Sample_title\|Sample_relation' | grep -v BioSample | sed -E 's/\"//g' | sed -E 's/SRA://g' | tabEdit -i stdin -t | sed -E 's/https:\/\/www.ncbi.nlm.nih.gov\/sra\?term=//g' | tail -n 1 | tr '\t' '\n') | while read -a LINE; do
        SRR_ID=$(wget -qO- "https://www.ncbi.nlm.nih.gov/sra?term=${LINE[1]}" | grep SRR | sed -E 's/.*>SRR/SRR/' | sed -E 's/<.*//';);
        echo -e "${LINE[1]}\t${LINE[0]}\t$SRR_ID"
    done
fi
