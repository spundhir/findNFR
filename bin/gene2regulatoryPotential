#!/bin/bash
#PBS -l nodes=1:ppn=4

GENOME="mm9"
MIN_N_CLASS=1
CONFIG_FILTER="RP"
WINDOW=1000

#### usage ####
usage() {
	echo Program: "gene2regulatoryPotential (compute regulatory potential for input genes in BED format)"
	echo Author: BRIC, University of Copenhagen, Denmark
	echo Version: 1.0
	echo Contact: pundhir@binf.ku.dk
	echo "Usage: gene2regulatoryPotential -i <file> -j <file> [OPTIONS]"
	echo "Options:"
	echo " -i <file>   [input gene coordinates in BED format]"
    echo "             [format: chr start end name score strand (..)]"
	echo " -j <file>   [input enhancer coordinates in BED format (can be stdin)]"
    echo "             [format: chr start end name score strand class (..)]"
    echo " -k <file>   [configuration file containing list of BAM files used to compute regulatory complexity]"
    echo "             [<id> <bamfile> (eg. RP h3k27me3_esc_Rep1.bam)]"
    echo "[OPTIONS]"
    echo " -g <string> [genome (default: mm9)]"
    echo " -f <string> [filter bam files from configuration file based on input indentifier (default: RP)]"
    echo "[OPTIONS: gene2promoter]"
    echo " -m <file>   [h3k4me3 modification data in BAM format. Used to refine promoter region]"
    echo " -w <int>    [assign h3k4me3 peak to a gene as promoter region, if within this distance to TSS (default: 1000 bp)]"
    echo "[OPTIONS: class-based analysis]"
    echo " -c          [perform separate analysis for each enhancer class]"
    echo " -n <int>    [minimum number of enhancers within each class (default: 1)]"
	echo " -h          [help]"
	echo
	exit 0
}

#### parse options ####
while getopts i:j:k:g:f:m:cnh ARG; do
    case "$ARG" in
    i) PROMOTER_FILE=$OPTARG;;
    j) ENHANCER_FILE=$OPTARG;;
    k) CONFIG_FILE=$OPTARG;;
    g) GENOME=$OPTARG;;
    f) CONFIG_FILTER=$OPTARG;;
    m) H3K4ME3_FILE=$OPTARG;;
    w) WINDOW=$OPTARG;;
    c) CLASS=1;;
    n) MIN_N_CLASS=$OPTARG;;
    h) HELP=1;;
    esac
done

## usage, if necessary file and directories are given/exist
if [ ! -f "$PROMOTER_FILE" -o -z "$ENHANCER_FILE" -o -z "$CONFIG_FILE" -o "$HELP" ]; then
	usage
fi

## populating files based on input genome
if [ "$GENOME" == "mm9" ]; then
    GENOME_FILE="/home/pundhir/project/genome_annotations/mouse.mm9.genome"
elif [ "$GENOME" == "hg19" ]; then
    GENOME_FILE="/home/pundhir/project/genome_annotations/human.hg19.genome"
else
    echo "Presently the program only support analysis for mm9 or hg19"
    echo
    usage
fi

if [ -z "$CLASS" ]; then
    ## create temporary output directory
    #TMP=$(cat /dev/urandom | tr -dc 'a-zA-Z0-9' | fold -w 32 | head -n 1)
    TMP="xajcIXJtLKpFbP72GH1SZk4MEzxAjVyN"
    if [ ! -d "$TMP" ]; then mkdir $TMP; fi

    ## define gene promoters
    if [ ! -z "$H3K4ME3_FILE" ]; then
        gene2promoter -i $PROMOTER_FILE -j $H3K4ME3_FILE -o $TMP -n $WINDOW | sort -k 4,4 | perl -ane '@t=split(/[\:\-]/,$F[7]); print "$t[0]\t$t[1]\t$t[2]\t$F[3]\t$F[4]\t$F[5]\t$F[6]\t$F[0]:$F[1]-$F[2]\t$F[8]\t$F[9]\n";' > $TMP/PROMOTER.BED
        PROMOTER_FILE="$TMP/PROMOTER.BED"
    fi

    ## define enhancers
    if [ "$ENHANCER_FILE" == "stdin" ]; then
        while read LINE; do
            echo ${LINE}
        done | perl -ane '$line=""; foreach(@F) { $line.="$_\t"; } $line=~s/\t$//g; print "$line\n";' > $TMP/ENHANCER.BED
        ENHANCER_FILE="$TMP/ENHANCER.BED"
    fi

    ## compute signal values at promoters
    if [ ! -s "$TMP/PROMOTER.BED.tpm" ]; then
        bed2expr -i $PROMOTER_FILE -j $CONFIG_FILE -k -d -n -g $GENOME -f $CONFIG_FILTER > $TMP/PROMOTER.BED.tpm
    fi

    ## compute signal values at enhancers
    if [ ! -s "$TMP/ENHANCER.BED.tpm" ]; then
        bed2expr -i $ENHANCER_FILE -j $CONFIG_FILE -k -d -n -g $GENOME -f $CONFIG_FILTER > $TMP/ENHANCER.BED.tpm
    fi

    ## determine score column information
    NCOL_PROMOTER_FILE=$(head -n 1 $PROMOTER_FILE | perl -ane 'print scalar(@F);')
    NCOL_ENHANCER_FILE=$(head -n 1 $ENHANCER_FILE | perl -ane 'print scalar(@F);')
    NCOL_SCORE_COL=$(zless $TMP/ENHANCER.BED.tpm | grep -v start | head -n 1 | perl -ane 'for($i='$((NCOL_ENHANCER_FILE+1))'; $i<=scalar(@F); $i++) { $col.="$i,"; } $col=~s/\,$//g; print $col;')
    #echo -e "$NCOL_PROMOTER_FILE\t$NCOL_ENHANCER_FILE\t$NCOL_SCORE_COL"; exit

    ## compute weighted signal and arrange final output
    bed2weightedSignal -i $PROMOTER_FILE -j $TMP/ENHANCER.BED.tpm -g $GENOME -c $NCOL_SCORE_COL > $TMP/PROMOTER.BED.ws
    paste $TMP/PROMOTER.BED.tpm $TMP/PROMOTER.BED.ws
else
    TMP_ENHANCER=$(cat /dev/urandom | tr -dc 'a-zA-Z0-9' | fold -w 32 | head -n 1)
    if [ ! -z "$CLASS" -a "$NCOL_SCORE_COL" -eq 1 ]; then
        COUNT=1
        for CLASS in $(cat $ENHANCER_FILE | cut -f 7 | sort | uniq -c | sed -E 's/^\s+//g' | perl -ane 'if($F[0]>='$MIN_N_CLASS') { print "$F[1]\n"; }'); do
            cat $ENHANCER_FILE | perl -ane 'if($F[6]=~/^'$CLASS'$/) { print $_; }' | cut -f 1-6 > $TMP_ENHANCER.$COUNT
            bed2weightedSignal -i $PROMOTER_FILE -j $TMP_ENHANCER.$COUNT -g $GENOME -y | cut -f $(($NCOL_PROMOTER_FILE+1)),$(($NCOL_PROMOTER_FILE+2)),$(($NCOL_PROMOTER_FILE+3)) > $TMP_ENHANCER.$COUNT.RC
            COMMAND="$COMMAND $TMP_ENHANCER.$COUNT.RC"
            COUNT=$(($COUNT+1))
        done
    elif [ "$NCOL_SCORE_COL" -gt 1 ]; then
        for ((COUNT=0; COUNT < $NCOL_SCORE_COL; COUNT++ )); do
            cat $ENHANCER_FILE | perl -ane '@score=split(/\,/,$F[4]); print "$F[0]\t$F[1]\t$F[2]\t$F[3]\t$score['$COUNT']\t$F[5]\t$F[6]\n";' | cut -f 1-6 > $TMP_ENHANCER.$COUNT
            if [ "$COUNT" -eq $((NCOL_SCORE_COL-1)) ]; then
                bed2weightedSignal -i $PROMOTER_FILE -j $TMP_ENHANCER.$COUNT -g $GENOME -y | cut -f $(($NCOL_PROMOTER_FILE+1)),$(($NCOL_PROMOTER_FILE+2)),$(($NCOL_PROMOTER_FILE+3)) > $TMP_ENHANCER.$COUNT.RC
            else
                bed2weightedSignal -i $PROMOTER_FILE -j $TMP_ENHANCER.$COUNT -g $GENOME -y | cut -f $(($NCOL_PROMOTER_FILE+1)),$(($NCOL_PROMOTER_FILE+2)) > $TMP_ENHANCER.$COUNT.RC
            fi
            COMMAND="$COMMAND $TMP_ENHANCER.$COUNT.RC"
        done
    else
        bed2weightedSignal -i $PROMOTER_FILE -j $ENHANCER_FILE -g $GENOME -y | cut -f $(($NCOL_PROMOTER_FILE+1)),$(($NCOL_PROMOTER_FILE+2)),$(($NCOL_PROMOTER_FILE+3)) > $TMP_ENHANCER.RC
        COMMAND="$COMMAND $TMP_ENHANCER.RC"
    fi
    #echo $COMMAND; exit
    eval $COMMAND

    ## remove temporary file
    if [ ! -z "$TMP" ]; then
        rm $TMP
    fi

    rm $TMP_GENE
    rm $TMP_ENHANCER*
fi

